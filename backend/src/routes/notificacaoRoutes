// src/routes/notificacaoRoutes.js

const express = require('express');
const router = express.Router();
const notificacaoController = require('../controllers/notificacaoController');

// Rota para a enfermeira enviar uma notificação manual de vacina em atraso
// O frontend chamará esta rota quando o botão "Notificar" for clicado 
router.post('/enviar', notificacaoController.enviarNotificacaoManual);

module.exports = router;